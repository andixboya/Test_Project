<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ACTO.Web</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/jquery.datetimepicker.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.datetimepicker.full.min.js"></script>

</head>
<body>
    @if (this.User.Identity.IsAuthenticated)
    {
        if (this.User.IsInRole("ExcursionOperator"))
        {
            <partial name="/Views/Shared/Headers/ExcursionOperatorHeaders.cshtml" />
        }
        else if (this.User.IsInRole("Cashier"))
        {
            <partial name="/Views/Shared/Headers/CashierHeaders.cshtml" />
        }
        else if (this.User.IsInRole("Representative"))
        {
            <partial name="/Views/Shared/Headers/RepresentativeHeaders.cshtml" />

        }

    }
    else
    {
        <partial name="/Views/Shared/Headers/Anonymous.cshtml" />
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - ACTO.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
   


    @RenderSection("Scripts", required: false)
</body>
</html>
