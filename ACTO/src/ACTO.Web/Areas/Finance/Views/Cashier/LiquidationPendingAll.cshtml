@using ACTO.Web.ViewModels.Liquidations
@model List<LiquidationPickViewModel>


@{
    ViewData["Title"] = "LiquidationPendingAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr class="hr-2 bg-primary mt-4">
<h1 class="bg-primary text-warning font-weight-bold text-center p-3 w-60 mx-auto rounded">Pending liquidaitons</h1>
<hr class="hr-2 bg-primary mt-4">

@if (Model.Count == 0)
{
    <h1 class="text-center bg-primary text-white w-50 justify-content-center container-fluid">Currently there are no pending liquidations</h1>
}
else
{
<div class=" row container-fluid justify-content-center">
    <div class="col-1 bg-primary text-warning font-weight-bold border border-dark  text-center">#</div>
    <div class="col-1 bg-primary text-warning font-weight-bold border border-dark text-center">Id</div>
    <div class="col-2 bg-primary text-warning font-weight-bold border border-dark text-center">Representative Name</div>
    <div class="col-2 bg-primary text-warning font-weight-bold border border-dark text-center">Cash</div>
    <div class="col-2 bg-primary text-warning font-weight-bold border border-dark text-center">Credit Card</div>
    <div class="col-2 bg-primary text-warning font-weight-bold border border-dark text-center">Total</div>
</div>

    @for (var i = 0; i < Model.Count; i++)
    {
        var current = @Model[i];

<div class=" row container-fluid justify-content-center">
    <div class="col-1   font-weight-bold border border-dark text-center text-primary"><a asp-area="Finance" asp-controller="Cashier" asp-action="LiquidationConfirm" asp-route-id=@current.Id> # </a> </div>
    <div class="col-1   font-weight-bold border border-dark text-center text-primary"> <a asp-area="Finance" asp-controller="Cashier" asp-action="LiquidationConfirm" asp-route-id=@current.Id> @current.Id</a></div>
    <div class="col-2   font-weight-bold border border-dark text-center text-primary"> <a asp-area="Finance" asp-controller="Cashier" asp-action="LiquidationConfirm" asp-route-id=@current.Id> @current.RepName </a></div>
    <div class="col-2   font-weight-bold border border-dark text-center text-primary">@current.Cash</div>
    <div class="col-2   font-weight-bold border border-dark text-center text-primary">@current.CreditCard</div>
    <div class="col-2   font-weight-bold border border-dark text-center text-primary">@current.Total</div>
</div>
    }

}


