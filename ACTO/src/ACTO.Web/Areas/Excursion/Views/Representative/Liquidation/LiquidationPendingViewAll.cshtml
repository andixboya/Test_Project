@model List<int>

<hr class="hr-2 bg-primary">

@if (Model.Count > 0)
{
    <h1 class="bg-primary text-white font-weight-bold text-center p-3 w-60 mx-auto rounded mx-auto">Pick Liquidation</h1>


    <div class=" row container-fluid justify-content-center">
        <div class="col-2 bg-primary text-warning font-weight-bold border border-dark text-center">#</div>
        <div class="col-2 bg-primary text-warning font-weight-bold border border-dark text-center">Liquidation</div>
    </div>

    @for (var i = 0; i < Model.Count; i++)
    {
        var current = @Model[i];

        <div class="row container-fluid justify-content-center">
            <a readonly asp-area="Excursion" asp-controller="Representative" asp-action="LiquidationApprove" asp-route-id=@current class="col-2 text-primary font-weight-bold border border-dark  text-center"> @(i + 1)</a>
            <a readonly asp-area="Excursion" asp-controller="Representative" asp-action="LiquidationApprove" asp-route-id=@current class="col-2 text-primary font-weight-bold border border-dark  text-center"> @current</a>
        </div>
    }
}
else
{
    <h1 class="bg-primary text-white font-weight-bold text-center p-3 w-60 mx-auto rounded mx-auto text-warning ">Currently there are no pending liquidations</h1>
}
<hr class="hr-2 bg-primary">