
@{
    ViewData["Title"] = "CreateTicket";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@using ACTO.Web.ViewModels.Tickets
@model List<TicketPickExcursionViewModel>

<hr class="hr-2 bg-primary mt-4">
<h1 class="bg-primary text-warning font-weight-bold text-center p-3 w-60 mx-auto rounded">All available spots for excursions</h1>
<hr class="hr-2 bg-primary mt-4">

@if (Model.Count == 0)
{
    <h1 class="text-center bg-primary text-white w-50 justify-content-center container-fluid">Currently there are no available excursions</h1>
}
else
{
    <div class=" row container-fluid justify-content-center">
        <div class="col-1 bg-primary text-warning font-weight-bold border border-dark  text-center">#</div>
        <div class="col-2 bg-primary text-warning font-weight-bold border border-dark text-center">Name</div>
        <div class="col-2 bg-primary text-warning font-weight-bold border border-dark text-center">Available spots</div>
    </div>
    @for (var i = 0; i < Model.Count; i++)
    {
        var current = @Model[i];

        <div class="row container-fluid justify-content-center">
            <div class="col-1 text-primary font-weight-bold border border-dark  text-center"><a asp-controller="ExcursionOperator" asp-area="Excursion" asp-action="DetailsExcursion" asp-route-id=@(current.Id) /> @(i + 1)</div>
            <div class="col-2 text-primary font-weight-bold border border-dark  text-center"><a asp-controller="ExcursionOperator" asp-area="Excursion" asp-action="DetailsExcursion" asp-route-id=@(current.Id) /> @current.Name</div>
            <div class="col-2 text-primary font-weight-bold border border-dark  text-center"><a asp-controller="ExcursionOperator" asp-area="Excursion" asp-action="DetailsExcursion" asp-route-id=@(current.Id) /> @current.AvailableSpots</div>
        </div>
    }
}


