@using ACTO.Web.InputModels.Excursions
@model  ExcursionTypeCreateInputModel

<hr class="hr-2 bg-primary">
<h1 class="bg-primary text-white font-weight-bold text-center p-3 w-60 mx-auto rounded mx-auto">Create Excursion Type</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form method="post" class="form border-primary-4 rounded p-3 w-60 mx-auto mt-3" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>

    <div id="name-holder" class="d-flex justify-content-center">
        <div class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Name" class="text-primary h5">Excursion Name</label>
            </div>
            <input type="text"
                   class="form-control text-primary text-center"
                   id="Name"
                   placeholder="Name of excursion"
                   asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-3">
        <button class="btn btn-primary font-weight-bold">Create excursion type</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
