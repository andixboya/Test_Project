
@using ACTO.Web.ViewModels.Excursion
@model List<ExcursionSingleSearchView>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr class="hr-2 bg-primary mt-4">
<h1 class="bg-primary text-white font-weight-bold text-center p-3 w-60 mx-auto rounded">All Excursions</h1>

<hr class="hr-2 bg-primary mt-4">
@* here below, is how we insert files/pictures*@

@if (Model.Count==0)
{
<h1 class="text-center bg-primary text-white w-50 justify-content-center container-fluid">Currently there are no available excursions</h1>
}
else
{
<div id="excursions" class="mt-3 w-100 justify-content-center">
    <table class="table mx-auto w-100 justify-content-center">
        <thead class="container-fluid w-100">
            <tr class="row container w-100">
                <th class="col-md-1 bg-primary text-white font-weight-bold" >#</th>
                <th class="col-md-2 bg-primary text-white font-weight-bold ">Id</th>
                <th class="col-md-2 bg-primary text-white font-weight-bold ">Name</th>
                <th class="col-md-2 bg-primary text-white font-weight-bold ">Capacity</th>
            </tr>
        </thead>
        <tbody class="container-fluid w-100">
            @for (var i = 0; i < Model.Count; i++)
            {
                var current = @Model[i];
                <tr class="row">
                    <th class="col-md-1">@(i + 1)</th>
                    <td class="col-md-2">  <a asp-controller="ExcursionOperator" asp-area="Excursion" asp-action="DetailsExcursion" asp-route-id=@(current.Id)>@current.Id</a></td>
                    <td class="col-md-2"><a asp-controller="ExcursionOperator" asp-area="Excursion" asp-action="DetailsExcursion" asp-route-id=@(current.Id)>@current.Name</a></td>
                    <td class="col-md-2">@current.Capacity</td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

