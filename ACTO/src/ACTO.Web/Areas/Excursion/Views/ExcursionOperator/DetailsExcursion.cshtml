
@using ACTO.Web.ViewModels.Excursion
@model ExcursionDetailsViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr class="hr-2 bg-primary mt-4">
<h1 class="bg-primary text-white font-weight-bold text-center p-3 w-60 mx-auto rounded">Details of excursion</h1>

<hr class="hr-2 bg-primary mt-4">
@* here below, is how we insert files/pictures*@
<form asp-action="DeleteExcursionPost" asp-area="Excursion" asp-controller="ExcursionOperator" asp-route-id="@Model.Id" class="form border-primary-4 rounded p-3 w-60 mx-auto mt-3" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div id="first-separator" class="d-flex justify-content-between">
        <div id="arrival-time" class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Arrival" class="text-primary h5">Arrival time</label>
            </div>
            <input readonly type="text"
                   class="form-control text-primary text-center"
                   id="arrival-time-input"
                   placeholder="Arrival time..."
                   asp-for=@Model.Arrival>
            @*//TODO: HERE ADD to some format!*@
            <span asp-validation-for=@Model.Arrival class="text-danger"></span>
        </div>

        <div id="departure-time" class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for=@Model.Departure class="text-primary h5">Departure time</label>
            </div>
            <input readonly type="text"
                   class="form-control text-primary text-center"
                   id="departure-time-input"
                   placeholder="Departure time..."
                   asp-for=@Model.Departure>
            @*//TODO: HERE ADD to some format!*@
            <span asp-validation-for=@Model.Departure class="text-danger"></span>
        </div>
    </div>

    <hr class="hr-2 bg-primary mt-4">

    <div id="second-separator" class="d-flex justify-content-between">
        <div id="start-point" class="form-group mx-auto w-45">
            <div class="form-group mx-auto w-45">
                <label asp-for=@Model.StartingPoint class="text-primary h5">Start point</label>
            </div>
            <input readonly type="text"
                   class="form-control text-primary text-center"
                   id="start-point-input"
                   placeholder="Start point..."
                   asp-for=@Model.StartingPoint>
            <span asp-validation-for=@Model.StartingPoint class="text-danger"></span>
        </div>

        <div id="end-point" class="form-group mx-auto w-45">
            <div class="form-group mx-auto w-45">
                <label asp-for=@Model.EndPoint class="text-primary h5">End point</label>
            </div>
            @*step="0.01" means stepper +0.01! for numbers only !!!! silly!*@
            <input readonly type="text"
                   class="form-control text-primary text-center"
                   id="end-point-input"
                   placeholder="End point..."
                   asp-for=@Model.EndPoint>
            <span asp-validation-for=@Model.EndPoint class="text-danger"></span>
        </div>
    </div>

    <hr class="hr-2 bg-primary mt-4">

    <div id="third-separator" class="d-flex justify-content-between">
        <div id="excursion-price" class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for=@Model.Price class="text-primary h5">Price</label>
            </div>
            <input readonly type="number"
                   class="form-control text-primary text-center"
                   id="picture"
                   placeholder="Price..."
                   min="0.00"
                   asp-for=@Model.Price>

            <span asp-validation-for=@Model.Price class="text-danger"></span>
        </div>

        <hr class="hr-2 bg-primary mt-4">
        <div id="excursion-type" class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for=@Model.ExcursionType.Name class="text-primary h5">Excursion type</label>
            </div>
            <input readonly type="text"
                   class="form-control text-primary text-center"
                   id="picture"
                   placeholder="Price..."
                   min="0.00"
                   asp-for=@Model.ExcursionType.Name>

            <span asp-validation-for=@Model.ExcursionType.Name class="text-danger"></span>
        </div>
    </div>

    <hr class="hr-2 bg-primary mt-4">

    <div id="fourth-separator" class="d-flex justify-content-between">
        <div id="tourist-capacity" class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for=@Model.TouristCapacity class="text-primary h5">Tourist Capacity</label>
            </div>
            <input readonly type="number"
                   class="form-control text-primary text-center"
                   id="tourist-capacity-input"
                   placeholder="Tourist capacity..."
                   min="0"
                   asp-for=@Model.TouristCapacity>
            <span asp-validation-for=@Model.TouristCapacity class="text-danger"></span>
        </div>

        <div id="languages" class="form-group mx-auto w-45">
            <div class="d-flex justify-content-center">
                <label asp-for=@Model.Languages class="text-primary h5">Language Type</label>
            </div>
            tricky part
            <select readonly class="form-control text-primary" multiple="multiple" id="languages-input" asp-for=@Model.Languages>
                <option selected disabled>--- Select single or multiple languages ---</option>
                @foreach (var type in Model.Languages)
                {
                    <option readonly value="@type.Id">@type.Name</option>
                }
            </select>

        </div>
    </div>
</form>
<hr class="hr-2 bg-primary mt-4">
<div class="d-flex justify-content-center w-100">
    <div class="d-flex justify-content-center mr-5">
        <a asp-controller="ExcursionOperator" asp-area="Excursion" asp-action="EditExcursion" asp-route-id=@(Model.Id) class="btn btn-primary font-weight-bold">Edit Excursion</a>
    </div>
    <div class="d-flex justify-content-center ml-5">
        @*made it form, because i needed the post request*@
        <form method="post" asp-controller="ExcursionOperator" asp-area="Excursion" asp-action="DeleteExcursion" asp-route-id=@(Model.Id)>
            <button class="btn btn-primary font-weight-bold"> Delete Excursion</button>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@*//TODO: attach this to the above for dateTime visualizer!*@
<script>
    window.onload = () => {
        $('#arrival-time-input').datetimepicker({
            format: 'd.m.Y H:i',
            lang: 'en'
        });
        $('#departure-time-input').datetimepicker({
            format: 'd.m.Y H:i',
            lang: 'en'
        })
    };
</script>
